{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "theme": "opencode",
  "autoupdate": true,
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "skill": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "deny"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  }
}
